using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace ConsoleApplication1
{
    class Program
    {
      public  class sport
        {
            void display()
            {
                Console.WriteLine("the parent class");
                Console.WriteLine("cricket");
            }
        }
        class stud : sport
        {
            void display1()
            {
                Console.WriteLine("the child class");
                Console.WriteLine("SYBCA");
                Console.WriteLine("jayesh");
            }

            static void Main(string[] args)
            {
                stud s = new stud();
                s.display();
                s.display1();

                Console.ReadLine();
                Console.WriteLine("SIMPLE INHERITANCE");
            }
        }
    }
